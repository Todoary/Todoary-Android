<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/category_back_btn_iv"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp"
        android:src="@drawable/backbtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/category_delete_btn_iv"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:paddingVertical="17dp"
        android:paddingHorizontal="16dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/category_array_sv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        app:layout_constraintBottom_toTopOf="@id/category_todo_lists_sv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_delete_btn_iv">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="37dp"
                android:layout_height="26dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/item_category_todolist_category1_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="19dp"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/item_category_todolist_category1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아랄ㄹ라"
                android:textColor="@color/red"
                android:fontFamily="@font/applesdgothicneosb"
                android:textSize="12sp"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="12dp"
                android:lineSpacingExtra="2.2sp"
                android:letterSpacing="0.02" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/item_category_todolist_category2_cv"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="19dp"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/item_category_todolist_category2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아랄ㄹ라"
                android:textColor="@color/red"
                android:fontFamily="@font/applesdgothicneosb"
                android:textSize="12sp"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="12dp"
                android:lineSpacingExtra="2.2sp"
                android:letterSpacing="0.02" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/item_category_todolist_category3_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="30dp"
                android:layout_marginStart="19dp"
                app:strokeColor="@color/red"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/item_category_todolist_category3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아랄ㄹ라"
                android:textColor="@color/red"
                android:fontFamily="@font/applesdgothicneosb"
                android:textSize="12sp"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="12dp"
                android:lineSpacingExtra="2.2sp"
                android:letterSpacing="0.02" />

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_array_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"/>

            <ImageView
                android:id="@+id/category_array_add_iv"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:padding="5.5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_category_add"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        
    </androidx.core.widget.NestedScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/category_todo_lists_sv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_array_sv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_todo_lists_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_category_todo_lists_rv" />

            <androidx.cardview.widget.CardView
                android:id="@+id/category_todo_lists_add_iv"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="70dp"
                android:layout_marginHorizontal="30dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_category_add" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>