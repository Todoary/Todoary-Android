<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/setting_alarm_toolbar"
        layout="@layout/toolbar_back" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@id/setting_alarm_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/setting_layout_border">

            <TextView
                android:layout_width="92dp"
                android:layout_height="19dp"
                android:text="Todoary 알림"
                android:layout_marginBottom="16dp"
                style="@style/setting_list"/>
            <ImageView
                android:id="@+id/alarm_todoary_iv"
                android:layout_width="16.6dp"
                android:layout_height="16.6dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_guide_vector"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/alarm_todoary_switch"
                android:layout_width="52dp"
                android:layout_height="20dp"
                android:switchMinWidth="32dp"
                android:layout_marginBottom="16dp"
                style="@style/setting_list"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/setting_layout_border">
            <TextView
                android:layout_width="91dp"
                android:layout_height="19dp"
                android:text="하루기록 알림"
                style="@style/setting_list"/>
            <ImageView
                android:id="@+id/alarm_day_iv"
                android:layout_width="16.6dp"
                android:layout_height="16.6dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_guide_vector"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/alarm_day_switch"
                android:layout_width="52dp"
                android:layout_height="20dp"
                android:switchMinWidth="32dp"
                style="@style/setting_list"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/setting_layout_border">
            <TextView
                android:layout_width="92dp"
                android:layout_height="19dp"
                android:text="리마인드 알림"
                style="@style/setting_list"/>
            <ImageView
                android:id="@+id/alarm_remind_iv"
                android:layout_width="16.6dp"
                android:layout_height="16.6dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_guide_vector"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/alarm_remind_switch"
                android:layout_width="52dp"
                android:layout_height="20dp"
                android:switchMinWidth="32dp"
                style="@style/setting_list"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>