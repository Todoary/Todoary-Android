<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="302dp"
    android:layout_height="56dp"
    android:id="@+id/card_view"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="4dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="1dp"
    >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        >

        <LinearLayout
            android:layout_width="298dp"
            android:layout_height="51dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="51dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="22.08dp"
                    android:layout_height="22.08dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ic_diarycheck_vector" />

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18dp"
                    style="@style/todo_list"
                    android:text="아침 산책" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/diary_detail_ll"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="35dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/categorysetting_select_tv"
                    android:layout_width="46dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/category_select"
                    android:gravity="center"
                    android:text="운동"
                    android:textColor="@color/white"
                    style="@style/category_name" />

                <ImageView
                    android:id="@+id/diary_pin_iv"
                    android:layout_width="12.88dp"
                    android:layout_height="12.88dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_diarypin_vector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    style="@style/diary_time"
                    android:text="PM 6:00"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>