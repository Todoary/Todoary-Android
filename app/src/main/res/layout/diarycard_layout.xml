<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginVertical="2dp"
    android:layout_marginHorizontal="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center_vertical"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="29dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="4dp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingHorizontal="17.48dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="22.08dp"
                android:layout_height="22.08dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_diarycheck_vector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/item_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                style="@style/todo_list"
                android:text="아침 산책"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginHorizontal="12dp"
                app:layout_constraintEnd_toStartOf="@+id/diary_detail_ll"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_image"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/diary_detail_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:id="@+id/diary_pin_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <ImageView
                        android:id="@+id/diary_pin_iv"
                        android:layout_width="12.8dp"
                        android:layout_height="12.8dp"
                        android:src="@drawable/ic_todolist_alarm_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        style="@style/diary_time"
                        android:text="PM 6:00"/>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/categorysetting_select_tv"
                    android:layout_width="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:background="@drawable/category_select"
                    android:gravity="center"
                    android:text="운동"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/white"
                    style="@style/category_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/diary_pin_layout"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>