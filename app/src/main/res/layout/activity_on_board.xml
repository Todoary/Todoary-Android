<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/on_board_content_vp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20.64dp"
        app:layout_constraintBottom_toTopOf="@+id/on_board_tb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.rd.PageIndicatorView
        android:id="@+id/on_board_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:piv_animationType="color"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_selectedColor="#142553"
        app:piv_unselectedColor="#D9D9D9"
        app:piv_viewPager="@id/on_board_content_vp"
        app:piv_padding="11dp"
        app:piv_radius="5dp"

        android:layout_marginBottom="17.36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/signup_fin_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_fin_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"

        android:text="확인"
        android:background="@drawable/round_button_lar"
        style="@style/main_btn_1"
        android:backgroundTint="@color/color_primary"
        android:layout_marginBottom="36dp"
        android:layout_marginHorizontal="28dp"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
