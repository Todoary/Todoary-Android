<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/categorysetting_toolbar_tb"
        layout="@layout/toolbar_back"/>

    <LinearLayout
        android:id="@+id/categorysetting_lin1_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/categorysetting_toolbar_tb"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="35dp">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_layout_border">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/categorysetting_edit_et"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint="(투두 이름)"
                android:textColorHint="@color/black"
                android:textSize="15dp"
                style="@style/setting_list"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/categorysetting_date_ll"
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_marginTop="17dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_layout_border">

            <TextView
                android:layout_width="189dp"
                android:layout_height="19dp"
                android:text="날짜"
                style="@style/setting_list"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="2022년 7월 20일"
                android:textColor="@color/black"
                style="@style/main_2"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_marginTop="17dp"
            android:orientation="horizontal"
            android:background="@drawable/setting_layout_border">

            <TextView
                android:layout_width="189dp"
                android:layout_height="19dp"
                android:text="알람"
                style="@style/setting_list"
                android:layout_gravity="center_vertical"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/alarm_todoary_switch"
                android:layout_width="52dp"
                android:layout_height="25dp"
                android:switchMinWidth="32dp"
                android:layout_marginStart="50dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:orientation="vertical"
            android:background="@drawable/setting_layout_border">
        <LinearLayout
            android:id="@+id/categorysetting_catebtn_ll"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="189dp"
                android:layout_height="19dp"
                android:text="카테고리"
                style="@style/setting_list"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_categorynext_vector"
                android:layout_marginStart="90dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categorysetting_recycler_rv"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                tools:listitem="@layout/categoryitem_list">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>