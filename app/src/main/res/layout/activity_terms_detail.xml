<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/terms_detail_toolbar"
        layout="@layout/toolbar_back" />

        <TextView
            android:id="@+id/termscheck_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/terms_detail_toolbar"
            android:text="@string/termsdetail_string"
            android:layout_marginHorizontal="35dp"
            style="@style/main_2"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:id="@+id/terms_checkll_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="239.5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            app:layout_constraintTop_toBottomOf="@id/termscheck_detail_tv"
            android:layout_marginTop="23dp"
            android:visibility="invisible">
             <CheckBox
                 android:id="@+id/terms_checkbox_cb"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동의 (선택)"
                android:layout_marginStart="7.5dp"
                android:textColor="@color/black"
                style="@style/main_2"
                />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>