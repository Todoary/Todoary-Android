<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottomsheet_pallete"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/categorysetting_name_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp">

        <EditText
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            style="@style/todo_list"
            android:background="@null"
            android:text="카테고리 이름을 입력해주세요"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/todosetting_palette_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:paddingVertical="22dp"
        android:paddingHorizontal="9dp"
        app:layout_constraintStart_toStartOf="@id/categorysetting_name_et"
        app:layout_constraintEnd_toEndOf="@id/categorysetting_name_et"
        app:layout_constraintTop_toBottomOf="@id/categorysetting_name_et">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_0_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src ="@drawable/categorycolor_selector_orange" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_1_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_yellow" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_2_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_bisquit" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_3_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_green" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_4_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_darkgreen" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_5_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_darkpink" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_6_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_mint" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_7_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_lightmint" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_8_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_apricot" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_9_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_lightbrown" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_10_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_brown" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_11_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_lightorange" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_12_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_blue"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_13_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_darkblue"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_14_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_gray"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_15_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_lightgray"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_16_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_babypink"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/todosetting_17_iv"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/categorycolor_selector_pink" />

    </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:layout_marginHorizontal="53dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todosetting_palette_layout">

        <androidx.cardview.widget.CardView
            android:id="@+id/categorysetting_complete_tv"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            app:cardCornerRadius="20dp"
            android:elevation="10dp"
            >

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/todo_list"
                android:paddingHorizontal="32.37dp"
                android:text="완료"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="70.63dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/categorysetting_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            app:cardCornerRadius="20dp"
            android:elevation="10dp">

            <TextView
                android:gravity="center"
                android:paddingHorizontal="32.37dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/todo_list"
                android:text="취소"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>