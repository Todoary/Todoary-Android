<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/diary_relativewrapper_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <include
        android:id="@+id/diary_toolbar_tb"
        layout="@layout/toolbar_back"/>
    <TextView
        android:id="@+id/diary_register_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:fontFamily="@font/applesdgothicneosb"
        android:lineSpacingExtra="3.6dp"
        android:textSize="17dp"
        android:textColor="@color/black"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="@id/diary_toolbar_tb"
        app:layout_constraintBottom_toBottomOf="@id/diary_toolbar_tb"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

<LinearLayout
    android:id="@+id/diary_parent_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/diary_scrollview_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="55dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:id="@+id/diary_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="date"
        style="@style/sub_title_1"
        android:layout_marginStart="32dp"
        android:layout_marginTop="34dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/diary_recycler_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="15.8dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </androidx.recyclerview.widget.RecyclerView>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="29dp"
            android:background="@drawable/diary_layout_border"/>
    </LinearLayout>

    <EditText
        android:id="@+id/diary_title_et"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:hint = "오늘의 일기 제목"
        android:layout_marginTop="23dp"
        android:layout_marginStart="29dp"
        android:background="@null"
        style="@style/calendar_month"/>
    <EditText
        android:id="@+id/diary_detail_et"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="17dp"
        android:bufferType="spannable"
        android:layout_marginHorizontal="29dp"
        android:layout_gravity="center_horizontal"
        android:gravity="top"
        android:background="@null"
        style="@style/todo_setting"
        android:hint="오늘의 일기를 작성해보세요!"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/diary_keytoolbar4_ll"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/keyboard_highlight1_iv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_highlight_1"/>
        <ImageView
            android:id="@+id/keyboard_highlight2_iv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="26dp"
            android:src="@drawable/ic_highlight_2"/>
        <ImageView
            android:id="@+id/keyboard_highlight3_iv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="26dp"
            android:src="@drawable/ic_highlight_3"/>
        <ImageView
            android:id="@+id/keyboard_highlight4_iv"
            android:layout_width="28dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_highlight_4"
            android:layout_marginStart="26dp"/>
        <ImageView
            android:id="@+id/keyboard_highlight5_iv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_highlight_5"
            android:layout_marginStart="26dp"/>
        <ImageView
            android:id="@+id/keyboard_highlight6_iv"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_highlight_6"
            android:layout_marginStart="26dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/diary_keytoolbar3_ll"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/keyboard_font1_iv"
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_fontstyle_1"/>
        <ImageView
            android:id="@+id/keyboard_font2_iv"
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:layout_marginStart="9dp"
            android:src="@drawable/ic_fontstyle_2"/>
        <ImageView
            android:id="@+id/keyboard_font3_iv"
            android:layout_width="62dp"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_fontstyle_3"/>
        <ImageView
            android:id="@+id/keyboard_font4_iv"
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_fontstyle_4"
            android:layout_marginStart="11dp"/>
        <ImageView
            android:id="@+id/keyboard_font5_iv"
            android:layout_width="58dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_fontstyle_5"
            android:layout_marginStart="6dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/diary_keytoolbar2_ll"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/white">
        <ImageView
            android:id="@+id/keyboard_leftalign_iv"
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_left_align"/>
        <ImageView
            android:id="@+id/keyboard_centeralign_iv"
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:layout_marginStart="37dp"
            android:src="@drawable/ic_center_align"/>
        <ImageView
            android:id="@+id/keyboard_rightalign_iv"
            android:layout_width="18dp"
            android:layout_height="12dp"
            android:layout_marginStart="37dp"
            android:src="@drawable/ic_right_align"/>
        <ImageView
            android:id="@+id/keyboard_font_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_font_btn"
            android:layout_marginStart="34dp"/>
        <ImageView
            android:id="@+id/keyboard_T_iv"
            android:layout_width="14dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_t"
            android:layout_marginStart="31dp"/>
        <ImageView
            android:id="@+id/keyboard_U_iv"
            android:layout_width="13dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_u"
            android:layout_marginStart="31dp"/>
        <ImageView
            android:id="@+id/keyboard_B_iv"
            android:layout_width="14dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_b"
            android:layout_marginStart="31dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/diary_keytoolbar_ll"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center"
        android:background="@color/keyboard_gray">
        <ImageView
            android:id="@+id/keyboard_camera_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_camera"/>
        <ImageView
            android:id="@+id/keyboard_type_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_type"
            android:layout_marginStart="40dp"/>
        <ImageView
            android:id="@+id/keyboard_smile_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_smile"
            android:layout_marginStart="40dp"/>
        <ImageView
            android:id="@+id/keyboard_edit_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit_3"
            android:layout_marginStart="40dp"/>
        <ImageView
            android:id="@+id/keyboard_x_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_x"
            android:layout_marginStart="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/diary_stickerkeylayout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
    <LinearLayout
        android:id="@+id/diary_stickerkeytoolbar_ll"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_sticker_key_layer">
        <ImageView
            android:id="@+id/stickerkeyboard_camera_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_camera"/>
        <ImageView
            android:id="@+id/stickerkeyboard_type_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_type"
            android:layout_marginStart="40dp"/>
        <ImageView
            android:id="@+id/stickerkeyboard_smile_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_smile"
            android:layout_marginStart="40dp"/>
        <ImageView
            android:id="@+id/stickerkeyboard_edit_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit_3"
            android:layout_marginStart="40dp"/>
        <ImageView
            android:id="@+id/stickerkeyboard_x_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_x"
            android:layout_marginStart="40dp"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/diary_stickerkeyboard_sv"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    <LinearLayout
        android:id="@+id/diary_stickerkeyboard_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/sticker_keyboard_gray">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/diary_sticekr1_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_sticker1"/>
            <ImageView
                android:id="@+id/diary_sticekr2_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_sticker2"/>
            <ImageView
                android:id="@+id/diary_sticekr3_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_sticker3"/>
            <ImageView
                android:id="@+id/diary_sticekr4_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_sticker4"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/diary_sticekr5_iv"
                android:layout_width="79dp"
                android:layout_height="92dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/ic_sticker5"/>
            <ImageView
                android:id="@+id/diary_sticekr6_iv"
                android:layout_width="70dp"
                android:layout_height="96dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/ic_sticker6"/>
            <ImageView
                android:id="@+id/diary_sticekr7_iv"
                android:layout_width="83dp"
                android:layout_height="73dp"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_sticker7"/>
            <ImageView
                android:id="@+id/diary_sticekr8_iv"
                android:layout_width="92dp"
                android:layout_height="80dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/ic_sticker8"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/diary_sticekr9_iv"
                android:layout_width="57dp"
                android:layout_height="78dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_sticker9"/>
            <ImageView
                android:id="@+id/diary_sticekr10_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="9dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_sticker10"/>
            <ImageView
                android:id="@+id/diary_sticekr11_iv"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="9dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/ic_sticker11"/>
            <ImageView
                android:id="@+id/diary_sticekr12_iv"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/ic_sticker12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/diary_sticekr13_iv"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_sticker13"/>
            <ImageView
                android:id="@+id/diary_sticekr14_iv"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_sticker14"/>
            <ImageView
                android:id="@+id/diary_sticekr15_iv"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_sticker15"/>
            <ImageView
                android:id="@+id/diary_sticekr16_iv"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_sticker16"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
</LinearLayout>
</RelativeLayout>

    <com.uni.todoary.sticker.StickerView
        android:id="@+id/stickerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/diary_title_et"
        app:showBorder="true"
        app:showIcons="true"
        app:borderColor="@color/todo_list_blue"
        tools:ignore="NotSibling">
    </com.uni.todoary.sticker.StickerView>
</androidx.constraintlayout.widget.ConstraintLayout>