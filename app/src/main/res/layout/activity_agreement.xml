<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <include
        android:id="@+id/setting_agreement"
        layout="@layout/toolbar_back" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/setting_agreement"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="38dp">

            <LinearLayout
                android:id="@+id/agreement_inform_ll"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_layout_border">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="19dp"
                    android:text="개인 정보 취급방침"
                    style="@style/setting_list"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/agreement_inform_btn"
                    android:layout_width="6dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_nextbtn_vector"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/agreement_service_ll"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="17dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_layout_border">
                <TextView
                    android:layout_width="167dp"
                    android:layout_height="19dp"
                    android:text="서비스 이용약관"
                    style="@style/setting_list"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/agreement_service_btn"
                    android:layout_width="6dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_nextbtn_vector"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/agreement_ad_ll"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="17dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_layout_border">
                <TextView
                    android:layout_width="167dp"
                    android:layout_height="19dp"
                    android:text="마케팅 정보 수신"
                    style="@style/setting_list"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/agreement_ad_btn"
                    android:layout_width="6dp"
                    android:layout_height="13dp"
                    android:src="@drawable/ic_nextbtn_vector"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>