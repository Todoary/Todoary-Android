<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/calendar_month_tv"
                android:layout_width="129.42dp"
                android:layout_height="24dp"
                android:text="날짜"
                android:paddingStart="15dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                style="@style/calendar_month"/>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_weight="1"/>


            <ImageView
                android:id="@+id/calendar_back_iv"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:src="@drawable/ic_calendar_previous"/>
            <ImageView
                android:id="@+id/calendar_next_iv"
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:src="@drawable/ic_calendar_next"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/calendar_header_ll"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/calendar_sun_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="일"
                style="@style/calendar_week"
                android:textColor="@color/calendar_red"/>
            <TextView
                android:id="@+id/calendar_mon_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="월"
                style="@style/calendar_week"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/calendar_tue_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="화"
                style="@style/calendar_week"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/calendar_wed_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="수"
                style="@style/calendar_week"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/calendar_thu_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="목"
                style="@style/calendar_week"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/calendar_fri_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="금"
                style="@style/calendar_week"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/calendar_sat_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="토"
                style="@style/calendar_week"
                android:textColor="@color/calendar_blue"/>

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendar_date_rv"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


</FrameLayout>