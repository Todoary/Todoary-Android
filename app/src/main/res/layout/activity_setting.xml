<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/setting_toolbar"
        layout="@layout/toolbar_back" />


            <LinearLayout
                android:id="@+id/setting_alarm_ll"
                android:layout_width="match_parent"
                android:layout_height="35.5dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="35dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_layout_border"
                android:layout_marginTop="38dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setting_toolbar">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="19.5dp"
                    android:src="@drawable/ic_alarm_vector"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="3dp"/>

                <TextView
                    android:layout_width="29dp"
                    android:layout_height="19dp"
                    android:text="알림"
                    style="@style/setting_list"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/setting_alarm_btn"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_nextbtn_vector"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_display_ll"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="35dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setting_alarm_ll"
                android:background="@drawable/setting_layout_border">
                <ImageView
                    android:layout_width="20.5dp"
                    android:layout_height="19.5dp"
                    android:src="@drawable/ic_display_vector"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="3dp"/>
                <TextView
                    android:layout_width="29dp"
                    android:layout_height="19dp"
                    android:text="화면"
                    android:layout_marginTop="1dp"
                    style="@style/setting_list"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/setting_display_btn"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_nextbtn_vector"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_profile_ll"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setting_display_ll"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_layout_border">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_account_vector"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="2.5dp"/>
                <TextView
                    android:layout_width="29dp"
                    android:layout_height="19dp"
                    android:text="계정"
                    style="@style/setting_list"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/setting_profile_btn"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_nextbtn_vector"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_pwd_ll"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal"
                android:layout_marginTop="14dp"
                android:layout_marginHorizontal="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setting_profile_ll"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_layout_border">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="21dp"
                    android:src="@drawable/ic_pwd_vector"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="3dp"/>
                <TextView
                    android:layout_width="29dp"
                    android:layout_height="19dp"
                    android:text="암호"
                    android:layout_marginTop="2dp"
                    style="@style/setting_list"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/setting_pwd_btn"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_nextbtn_vector"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_guide_ll"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setting_pwd_ll"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_layout_border">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_guide_vector"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="2.5dp"/>
                <TextView
                    android:layout_width="106dp"
                    android:layout_height="19dp"
                    android:text="Todoary 가이드"
                    android:layout_marginTop="1dp"
                    style="@style/setting_list"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/setting_guide_btn"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_nextbtn_vector"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_agreement_ll"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setting_guide_ll"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_layout_border">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_agreement_vector"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="3.5dp"/>
                <TextView
                    android:layout_width="81dp"
                    android:layout_height="19dp"
                    android:text="약관 및 정책"
                    android:layout_marginTop="1dp"
                    style="@style/setting_list"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/setting_agreement_btn"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_nextbtn_vector"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_feedback_ll"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal"
                android:layout_marginTop="17dp"
                android:layout_marginHorizontal="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setting_agreement_ll"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_layout_border">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_feedback_vector"
                    android:layout_marginEnd="13dp"
                    android:layout_marginStart="3dp"/>
                <TextView
                    android:layout_width="58dp"
                    android:layout_height="19dp"
                    android:text="문의하기"
                    android:layout_marginTop="0.5dp"
                    style="@style/setting_list"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/setting_feedback_btn"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_nextbtn_vector"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/setting_review_ll"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/setting_feedback_ll"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/setting_layout_border">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_review_vector"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="3dp"/>
                <TextView
                    android:layout_width="78dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="3dp"
                    android:text="리뷰 남기기"
                    style="@style/setting_list"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/setting_review_btn"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_nextbtn_vector"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="35dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/setting_layout_border2"
        android:layout_marginTop="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp">
        <TextView
            android:layout_width="29dp"
            android:layout_height="35dp"
            android:layout_marginTop="17dp"
            android:text="버전"
            style="@style/setting_list"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/setting_ver_tv"
            android:layout_width="26dp"
            android:layout_height="35dp"
            android:text="1.0 "
            style="@style/setting_list"
            android:layout_marginTop="17dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>