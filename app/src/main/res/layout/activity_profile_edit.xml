<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="1">
    <include
        android:id="@+id/profile_edit"
        layout="@layout/toolbar_back" />

    <LinearLayout
        android:id="@+id/profile_edit_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/profile_edit">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_iv"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:civ_border_color="@color/profile_gray"
        app:civ_border_width="0.5dp"
        android:src="@color/profile_gray"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profiledit_picedit_tv"
        android:layout_width="82dp"
        android:layout_height="26dp"
        android:background="@drawable/bg_profile_stroke_btn"
        android:textSize="11dp"
        android:textColor="#747373"
        android:text="사진 변경"
        android:layout_marginTop="14dp"
        android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp">
            <TextView
                android:layout_width="45dp"
                android:layout_height="17dp"
                android:text="닉네임"
                android:textSize="14dp"
                style="@style/main_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="0/10"
                android:textSize="12dp"
                android:textColor="@color/nickname_gray"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/profileedit_name_et"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:maxLines="1"
        android:paddingStart="10dp"
        style="@style/setting_list"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bg_profile_edit_layer"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp">
        <TextView
        android:layout_width="60dp"
        android:layout_height="17dp"
        android:text="한줄소개"
        android:textSize="14dp"
        style="@style/main_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="0/10"
            android:textSize="12dp"
            android:textColor="@color/nickname_gray"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/profileedit_intro_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="47dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="30dp"
        android:paddingStart="10dp"
        style="@style/setting_list"
        android:paddingVertical="10dp"
        android:background="@drawable/bg_profile_edit_layer"/>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profileedit_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="200dp"
        android:text="확인"
        android:textColor="@color/black"
        android:background="@drawable/profile_button_lar"
        style="@style/main_btn_1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>