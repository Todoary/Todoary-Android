    <style name="sub_1" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/applesdgothicneom</item>
        <item name="android:lineSpacingExtra">2.4sp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#8D8D8D</item>
    </style>

    <style name="main_btn_1" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/applesdgothicneosb</item>
        <item name="android:lineSpacingExtra">3.6sp</item>
        <item name="android:textSize">18dp</item>
