<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Todoary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/color_primary</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Checkbox Style -->
    <style name="CheckBox_Todolist" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/todo_list_blue</item>
    </style>

    <!-- Splash Style -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_theme</item>
    </style>

    <!-- Dialog Style -->
    <style name="Dialog_more_Theme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMinor">0%</item>
        <item name="android:windowMinWidthMajor">0%</item>
    </style>

    <!-- Font Style -->
    <style name="head_line" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/applesdgothicneosb</item>
        <item name="android:lineSpacingExtra">3.6sp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="sub_title_1" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/applesdgothicneob</item>
        <item name="android:lineSpacingExtra">3.2sp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="main_1" parent="@android:style/Widget.TextView">
        <item name="fontFamily">@font/applesdgothicneom</item>
        <item name="android:lineSpacingExtra">2.8sp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/black</item>
    </style>

