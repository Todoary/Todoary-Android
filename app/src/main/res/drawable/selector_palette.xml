<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item
                android:width="30dp"
                android:height="30dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:left="5dp">
                <shape
                    android:shape="oval">
                    <solid android:color="@color/calendar_blue" />
                </shape>
            </item>
            <item>
                <shape
                    android:shape="oval">
                    <stroke android:width="2dp"
                        android:color="@color/calendar_blue"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item
                android:width="30dp"
                android:height="30dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:left="5dp">
                <shape android:shape="oval">
                    <solid android:color="@color/calendar_blue"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>