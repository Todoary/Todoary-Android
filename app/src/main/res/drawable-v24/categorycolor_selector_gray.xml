<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item
                android:id="@+id/categoryselector_rec"
                android:width="30dp"
                android:height="30dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:left="5.5dp">
                <shape
                    android:shape="oval">
                    <solid android:color="@color/todoset_gray" />
                </shape>
            </item>
            <item>
                <shape
                    android:shape="oval">
                    <stroke android:width="2dp"
                        android:color="@color/todoset_gray"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item
                android:id="@+id/categoryselector_border"
                android:width="30dp"
                android:height="30dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"
                android:left="5.5dp">
                <shape android:shape="oval">
                    <solid android:color="@color/todoset_gray"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>